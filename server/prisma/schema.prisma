// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  inGame   Boolean
  idRoom   String
  score    Int
  yourTurn Boolean
  board    Json
}

model Rooms {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  player_1 String
  player_2 String
  isActive Boolean
}

model Historial {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  row             String
  column          String
  idUser          String
  idNicknameEnemy String
  idRoom          String
}
